<%= form_for @contact do |f| %>
    <%= f.label :name %><br/>
    <%= f.text_field :name, required: true %>
    <br/>
    <br/>
    <%= f.label :email %><br/>
    <%= f.email_field :email, required: true %>
    <br/>
    <br/>
    <%= f.label :message%><br/>
    <%= f.text_area :message, as: :text %>
    <br/>
    <br/>
    <div style="display: none">
      <%= f.label :nickname %><br/>
      <%= f.text_area :nickname, hint: "put this  blank" %>
    </div>
    <%= f.submit "send me" %>
<% end %>