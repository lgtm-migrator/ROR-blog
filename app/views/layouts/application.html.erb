<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= yield :title  %></title>
  <%= yield :meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Wrapper -->
<div id="wrapper">
  <%= render 'layouts/header' %>
  <%= render 'layouts/menu' %>
  <%= yield :sidebar_right %>
  <!-- Main -->
  <div id="main">
    <%= yield %>
  </div>
  <%= yield :sidebar_left %>
  <%= render 'layouts/container_footer'%>
  <%= render 'layouts/footer' %>
</div>
<!-- Scripts -->
<%= javascript_include_tag 'application' %>
</body>
</html>